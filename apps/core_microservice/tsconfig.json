{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node", "jest"],
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "src/*": ["*"]
    },
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "ignoreDeprecations": "5.0"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
